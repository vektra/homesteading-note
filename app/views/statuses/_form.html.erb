<%= form_for(@status) do |f| %>

  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
        <% @status.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content, "Status Content (REQUIRED)" %>
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.label :in_reply_to, "In Reply To (optional)" %>
    <%= f.url_field :in_reply_to %>
  </div>

  <div class="field checkbox">
    <%= f.label :private, "Private Status?" %>
    <%= f.check_box :private %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", statuses_path %>
    <%= f.submit %>
  </div>
<% end %>
