<% if note.public? || logged_in? %>
  <% if action_name == "index" %><li><% end %>

    <article class="h-entry hentry note">
      <div class="p-entry-title e-entry-content entry-content entry-title">
        <p>
          <%= note.content %>
        </p>
      </div>

      <footer>
        <%= render partial: "/shared/published_meta",
                   locals: { note: note } %>
      </footer>
    </article>

    <% unless note.in_reply_to.blank? %>
      <div>
        <p class="in-reply-to">
          <b>In reply to:</b>
          <a href="<%= note.in_reply_to %>" rel="prev external">
            <%= note.in_reply_to %>
          </a>
        </p>
      </div>
    <% end %>


    <%= render partial: "admin_nav",
               locals: { note: note } %>

  <% if action_name == "index" %></li><% end %>
<% end %>
